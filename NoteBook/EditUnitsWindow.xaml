<Window x:Class="NoteBook.EditUnitsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteBook"
        mc:Ignorable="d"
        Title="EditUnitsWindow" Height="450" Width="609.384">
    <Grid Margin="0,0,2,0">
        <Label Content="Courses Units :&#xD;&#xA;" HorizontalAlignment="Left" Margin="88,53,-96,0" VerticalAlignment="Top" Width="112" Height="47"/>
        <ListBox x:Name="units" HorizontalAlignment="Left" Height="217" Margin="88,105,-374,0" VerticalAlignment="Top" Width="390" MouseDoubleClick="EditUnit"/>
        <Button x:Name="addUnits" Content="Add" HorizontalAlignment="Left" Margin="88,350,-147,0" VerticalAlignment="Top" Width="163" Height="32"/>
        <Button x:Name="removeUnits" Content="Remove" HorizontalAlignment="Left" Margin="313,350,-374,0" VerticalAlignment="Top" Width="165" Height="32"/>

    </Grid>
</Window>
